<world>
    <window width="1024" height="768" />
    <camera>
        <position x="0" y="5" z="15" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>

    <lights>
        <light type="point" posx="0" posy="10" posz="10" />
        <light type="point" posx="-10" posy="10" posz="-10" />
    </lights>

    <group>
        <!-- Cockpit central (esfera) -->
        <group>
            <transform>
                <scale x="0.7" y="0.7" z="0.7" />
            </transform>
            <models>
                <model file="../tests/sphere_1_8_8.3d">
                    <texture file="mil2.jpg" />
                </model>
            </models>
        </group>

        <!-- Ligações laterais (cilindros simulados com cones finos) -->
        <group>
            <transform>
                <translate x="1.2" y="0" z="0" />
                <scale x="0.1" y="0.1" z="1.2" />
                <rotate angle="90" x="0" y="1" z="0" />
            </transform>
            <models>
                <model file="../tests/cone_1_2_4_3.3d">
                    <texture file="mil2.jpg" />
                </model>
            </models>
        </group>
        <group>
            <transform>
                <translate x="-1.2" y="0" z="0" />
                <scale x="0.1" y="0.1" z="1.2" />
                <rotate angle="90" x="0" y="1" z="0" />
            </transform>
            <models>
                <model file="../tests/cone_1_2_4_3.3d">
                    <texture file="mil2.jpg" />
                </model>
            </models>
        </group>

        <!-- Painéis solares (planos grandes) -->
        <group>
            <transform>
                <translate x="2" y="0" z="0" />
                <scale x="2.5" y="2.5" z="0.1" />
            </transform>
            <models>
                <model file="../tests/plane_1_3.3d">
                    <texture file="mil2.jpg" />
                </model>
            </models>
        </group>
        <group>
            <transform>
                <translate x="-2" y="0" z="0" />
                <scale x="2.5" y="2.5" z="0.1" />
            </transform>
            <models>
                <model file="../tests/plane_1_3.3d">
                    <texture file="mil2.jpg" />
                </model>
            </models>
        </group>
    </group>
</world>